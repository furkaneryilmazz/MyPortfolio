@model List<MyPortfolio.DAL.Entities.Feature>

<style>
    .main-h1 h1 {
        font-family: "montserrat-semibold", sans-serif;
        font-size: 3rem; /* Font boyutunu artırdık */
        color: #862121;
        text-transform: uppercase;
        letter-spacing: .15rem;
        margin-top: 0;
        margin-bottom: 0;
    }
</style>


<section id="home" class="s-home page-hero target-section" data-parallax="scroll" data-image-src="https://i.hizliresim.com/kg3w8de.jpg" data-natural-width=3000 data-natural-height=2000 data-position-y=center>

    <div class="overlay"></div>
    <div class="shadow-overlay"></div>

    @foreach (var item in Model)
    {
        <div class="home-content">

            <div class="row home-content__main">

                <div class="main-h1">
                    <h1>@item.Title</h1>
                </div>
                @* <h1>@item.Title</h1> *@

                <h1>
                    @* I am Jonathan Doe. <br>
                    I am a graphic & UI/UX <br>
                    designer based in Somewhere. *@
                    @item.Description
                </h1>

                <div class="home-content__buttons">
                    <a href="#works" class="smoothscroll btn btn--stroke">
                        Son Projelerim
                    </a>
                    <a href="#about" class="smoothscroll btn btn--stroke">
                        Hakkımda
                    </a>
                </div>

                <div class="home-content__scroll">
                    <a href="#about" class="scroll-link smoothscroll">
                        <span>Aşağı İn</span>
                    </a>
                </div>

            </div>

        </div>
    }

     <!-- end home-content -->

    <ul class="home-social">
        <li>
            <a href="#"><i class="im im-facebook" aria-hidden="true"></i><span>Facebook</span></a>
        </li>
        <li>
            <a href="#"><i class="im im-twitter" aria-hidden="true"></i><span>Twiiter</span></a>
        </li>
        <li>
            <a href="#"><i class="im im-instagram" aria-hidden="true"></i><span>Instagram</span></a>
        </li>
        <li>
            <a href="#"><i class="im im-behance" aria-hidden="true"></i><span>Behance</span></a>
        </li>
        <li>
            <a href="#"><i class="im im-pinterest" aria-hidden="true"></i><span>Pinterest</span></a>
        </li>
    </ul>
    <!-- end home-social -->

</section>